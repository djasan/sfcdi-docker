{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
    <h1>Livre index</h1>
    {% for message in app.flashes('success') %}
<div id="banner" class="banner alert alert-success">
    <span class="close-btn" onclick="this.parentElement.style.display='none';">X</span>
    {{ message }}
</div>
{% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Editeur</th>
                <th>Auteur</th>
                <th>Isbn</th>
                <th>Date_publication</th>
                <th>Image</th>
                <th>Resume</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.editeur }}</td>
                <td>{{ livre.auteur }}</td>
                <td>{{ livre.isbn }}</td>
                <td>{{ livre.datePublication ? livre.datePublication|date('Y-m-d') : '' }}</td>
                <td> <img src="{{ asset(livre.image) }}" alt="Image du livre"></td>
                <td>{{ livre.resume }}</td>
                <td>
                    <a href="{{ path('app_livre_show', {'id': livre.id}) }}">show</a>
                    <a href="{{ path('app_livre_edit', {'id': livre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_livre_new') }}">Create new</a>
{% endblock %}
